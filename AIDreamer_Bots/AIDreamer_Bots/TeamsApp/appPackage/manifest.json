{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
    "manifestVersion": "1.19",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "AI Dreamer",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "AIDreamer_${{APP_NAME_SUFFIX}}",
        "full": "full name for AI Dreamer"
    },
  "description": {
    "short": "AI Dreamer - Your AI Assistant",
    "full": "Bạn có thể tìm kiếm và đặt câu hỏi về Saigon Technology. Tôi ở đây để giúp bạn tìm thông tin về chính sách công ty, quy định, và thông tin chung."
  },
    "accentColor": "#FFFFFF",
    "bots": [
        {
        "botId": "${{BOT_ID}}",
        "scopes": [
            "personal",
            "team",
            "groupChat"
        ],
        "supportsFiles": false,
        "isNotificationOnly": false,
        "commandLists": [
            {
              "scopes": ["personal", "team", "groupChat"],
              "commands": [
                  {
                      "title": "Hi",
                      "description": "Say hi to the bot."
                  }
              ]
            }
        ]
        }
    ],
    "composeExtensions": [
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}